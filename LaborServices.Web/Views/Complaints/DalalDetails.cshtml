@model  LaborServices.Web.Models.CustomerTicket
@{
    ViewBag.Title = "Details of ticket number :" + Model.TicketNumber;
    var routeData = ViewContext.RouteData.Values;
    string lang = routeData["lang"] as string;
    string dateLang = lang == "ar" ? "ar-ly" : "en";
    string inputTextAlign = lang == "ar" ? "text-right" : "text-left";
    string inputTextdirection = lang == "ar" ? "text-left" : "text-right";
}
@*<section class="contactData">*@
@*<div class="container table-responsive-sm">*@
@section css
{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.16/datatables.min.css" />
}



    <section class="contactData">
        <div class="container">

            <div class="row">
                <div class="col mt-4 p-0">
                    <div class="bg-white text-dark rounded rounded-20px p-5" style="margin: auto;width: 97%;">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="border p-2 mb-4">
                                    <div class="panel-body">

                                        <table class="table table-sm table-bordered table-hover">
                                            <thead class="thead-default">
                                                <tr>
                                                    <th colspan="4" class="text-center"># @Model.TicketNumber <span class="badge badge-pill badge-info">@Model.Status</span></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                  
                                                    <td>@DbRes.T("ClientClosedCodeTH", "ProfileResources"):</td>
                                                    <td>@Html.DisplayFor(m => Model.ClientClosedCode)</td>
                                                    <td>@DbRes.T("SectorTypeTH", "ProfileResources"):</td>
                                                    <td>@Html.DisplayFor(m => Model.SectorType)</td>
                                                </tr>
                                                <tr>
                                                    <td>@DbRes.T("ContactTH", "ProfileResources"):</td>
                                                    <td>@Html.DisplayFor(m => Model.Contact)</td>
                                                    <td>@DbRes.T("ProblemTypeTH", "ProfileResources"):</td>
                                                    <td>@Html.DisplayFor(m  => Model.ProblemType)</td>
                                                </tr>
                                                <tr>
                                                    <td>@DbRes.T("ContractTH", "ProfileResources"):</td>
                                                    <td> @Html.ActionLink(Model.Contract, "Details", "HourlyWorkers", new { id = Model.ContractId }, null)</td>
                                                </tr>
                                                <tr>
                                                    <td colspan="4">@Html.DisplayFor(m => Model.ProblemDetails)</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


