@model LaborServices.Web.Models.ContractViewModel
@{
    ViewBag.Title = "تم بنجاح";
}

<section class="loginPage">
    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col mt-4 p-0">
                    <div class="bg-white text-dark rounded rounded-20px p-4 p-lg-5" style="margin: auto;width: 97%;">
                        <div class="row text-left">
                            <div class="col-12 text-center mb-3"><img src="~/Images/frontEnd/dalal.png" alt="دلال" /></div>
                            <div class="col-12 text-center mb-3">
                                <div class="alert alert-successiful w-50 m-auto " role="alert">
                                    @DbRes.T("Contract_FinishRequestAlert", "DalalResources")
                                </div>
                                <div class="mt-3"> @DbRes.T("YourContractNum", "DalalResources")  <span class="text-primary display-5">@Model.ContractNum</span></div>
                                <div class="mt-2">@DbRes.T("PleasePay", "DalalResources") <span class="text-primary display-6"> (@Math.Round(Convert.ToDouble(Model.FinalPrice), 2)) </span>S.R. </div>
                                <div class="text-danger mt-2">
                                    @DbRes.T("SuccessMessageContract", "DalalResources")
                                </div>

                                <div class="mt-3">
                                    <a href="@Url.Action("PaymentMethod","Payment", new {area="",id=Model.ContractId})" class="btn btn-lg btn-info">
                                        @DbRes.T("PayBtn", "Shared")  <i class="fa fa-lock fa-lg"></i>&nbsp;
                                    </a>
                                </div>
                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script type="text/javascript">
    localStorage.clear();
</script>