            <div class="custumInpFile"><i class="fa fa-cloud-upload fa-lg mt-1"></i> @DbRes.T("UploadBankTransferStatement", "DalalResources") </div>
            <input type="file" class="form-control-file w-50 mx-auto" id="BankFile" name="BankFile">
            <button type="submit" class="btn btn-primary mb-2 mt-4">@DbRes.T("SubmitBtn", "Shared")</button>

