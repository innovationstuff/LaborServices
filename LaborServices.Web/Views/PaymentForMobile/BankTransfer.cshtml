@using LaborServices.Web.Models
@model ServiceContractPerHour

@{
    ViewBag.Title = "SystemicBankTransfer";
    Layout = "~/Views/Shared/_LayoutMobile.cshtml";
}

@section css{
    @Styles.Render("~/Content/site-payment-bankTransfer")
}

<section class="SystemicBankTransfer">
