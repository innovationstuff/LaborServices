@model  LaborServices.Web.Models.SetPasswordViewModel

<div class="content">
    <div class="container">
        <div class="row">
            <div class="col mt-4 p-0">
                <div class="bg-white text-dark rounded rounded-20px p-5 m-auto w-50">
                    <div class="text-center">
                        <div class="form-group h4 text-primary">
                            Create Local Login
                        </div>
                        <div class="form-group h5 text-danger">
                            You do not have a local username/password for this site. Add a local
                            account so you can log in without an external login.
                        </div>

                        @using (Html.BeginForm("SetPassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary("", new { @class = "text-danger" })

                            <div class="form-group">
                                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control rounded-0", placeholder = "New Password" })
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control rounded-0", placeholder = "Confirm Password" })
                            </div>

                            <div class="form-group text-center">
                                <input type="submit" value="Set password" class="btn btn-lg btn-block btn-info" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}