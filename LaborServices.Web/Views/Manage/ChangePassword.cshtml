@model LaborServices.Web.Models.ChangePasswordViewModel
@{
    ViewBag.Title = DbRes.T("ChangePassword", "ProfileResources");
}
<section class="loginPage">

    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col mt-4 p-0">
                    <div class="bg-white text-dark rounded rounded-20px p-5 m-auto w-md-40">
                        <div class="text-center">
                            <div class="form-group h4 text-primary">@ViewBag.Title</div>
                            @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "regForm", role = "form" }))
    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-danger" })

                        <div class="form-group">
                            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control rounded-0", placeholder = DbRes.T("OldPassword", "ProfileResources") })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control rounded-0", placeholder = DbRes.T("NewPassword", "ProfileResources") })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control rounded-0", placeholder = DbRes.T("ConfirmPassword", "ProfileResources") })
                        </div>

                        <div class="form-group text-center">
                            <input type="submit" class="btn btn-lg btn-block btn-info" value="@DbRes.T("Change", "ProfileResources")" />
                        </div>
}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}