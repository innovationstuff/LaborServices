
@{
	ViewBag.Title = "Why Abdal";
}
<style>
	.field-validation-error {
		color: red
	}
</style>
<div class="panel panel-default">
	<div class="header text-left panel-heading">
		<span class="h3">Why Abdal</span>
	</div>
	<div class="text-right">
		<a onclick="$('#divCreate').slideToggle();" class="btn btn-primary btn-xs white"><i class="fa fa-plus"></i>&nbsp;&nbsp;Create</a>
	</div>
	<div style="margin:30px auto;">
		<div id="divCreate" style="display:none">
			@Html.Action("Create", "About", new { Type = 2 })
		</div>
	</div>

	@Ajax.ActionLink("getList", "List", "About", new { Type = 2 }, new AjaxOptions { UpdateTargetId = "Aboutlist" }, new { style = "display:none;", id = "getAllList" })

	<div class="Aboutlist" id="Aboutlist">
		@Html.Action("List", "About", new { Type = 2 })
	</div>
</div>
<script src="~/Scripts/about.js"></script>
