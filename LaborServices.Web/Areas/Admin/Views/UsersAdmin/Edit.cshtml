@model  LaborServices.Web.Areas.Admin.Models.EditUserViewModel
@{
    ViewBag.Title = "Edit";
}

<div class="page-profile">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.PhoneNumber)
        <div class="row">

            <!-- COL 1 -->
            <div class="col-md-8 col-lg-6">
                <section class="panel">
                    <div class="panel-heading panel-heading-transparent">
                        <strong>Edit @Model.UserName </strong>
                    </div>
                    <div class="panel-body noradius padding-10">

                        <fieldset>
                            <div class="row">
                                <div class="form-group">
                                    <div class="col-md-6 col-sm-6">
                                        <div class="input-group">
                                            @Html.LabelFor(m => m.UserName)
                                            <span class="input-group-addon">+966</span>
                                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.UserName)
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-6">
                                        @Html.LabelFor(model => model.Email)
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Email)
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group">
                                    <div class="col-md-6 col-sm-6">
                                        @Html.LabelFor(m => m.Name)
                                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Name)
                                    </div>
                                </div>
                            </div>
                            @*<div class="row">
                                    <div class="form-group">
                                        <div class="col-md-6 col-sm-6">
                                            @Html.LabelFor(m => m.PhoneNumber)
                                            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.PhoneNumber)
                                        </div>
                                        <div class="col-md-6 col-sm-6">
                                            @Html.LabelFor(model => model.UserType)
                                            @Html.DropDownListFor(m => m.UserType, SelectListUtility.GetUsersTypeList(), new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.UserType)
                                        </div>
                                    </div>
                                </div>*@
                        </fieldset>

                        <hr class="half-margins" />
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-default" />
                                @Html.ActionLink("Back to List", "Index")


                            </div>
                        </div>

                    </div>
                </section>
            </div><!-- /COL 1 -->

            <div class="col-md-12 col-lg-3">

                <!-- groups  -->
                <section class="panel panel-default">
                    <header class="panel-heading">
                        <h2 class="panel-title elipsis">
                            <i class="fa fa-rss"></i> user groups
                        </h2>
                    </header>

                    <div class="panel-body noradius padding-10">

                        <ul class="bullet-list list-unstyled">
                            @foreach (var item in Model.GroupsList)
                            {
                                if (string.Equals(item.Text.ToLower(), AppConstants.SuperAdminsGroup, StringComparison.InvariantCultureIgnoreCase) == false)
                                {
                                    <li>
                                        <label class="checkbox">
                                            <input type="checkbox" name="selectedGroups" value="@item.Value" checked="@item.Selected" />
                                            <i></i>@item.Text
                                        </label>
                                    </li>
                                }
                            }
                        </ul>
                    </div>

                </section>

                <!-- roles  -->
                <section class="panel panel-default">
                    <header class="panel-heading">
                        <h2 class="panel-title elipsis">
                            <i class="fa fa-rss"></i> user roles
                        </h2>
                    </header>

                    <div class="panel-body noradius padding-10">

                        <ul class="bullet-list list-unstyled">
                            @foreach (var item in Model.RolesList)
                            {
                                <li>
                                    <label class="checkbox">
                                        <input type="checkbox" name="selectedRoles" value="@item.Value" checked="@item.Selected" />
                                        <i></i>@item.Text
                                    </label>
                                </li>
                            }
                        </ul>
                    </div>

                </section>

            </div><!-- /COL 3 -->


        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
